{
  "name": "kafka",
  "version": "1.0.0",
  "label": "Kafka",
  "description": "Kafka is an open-source distributed event streaming platform. This Kafka Connector is use to publish/consume a messages to/from a topic.",
  "publisher": "Fortinet",
  "icon_small_name": "small.png",
  "icon_large_name": "large.png",
  "configuration": {
    "fields": [
      {
        "title": "Hostname",
        "type": "text",
        "name": "host",
        "required": true,
        "visible": true,
        "editable": true,
        "description": "Specify the hostname to connect."
      },
      {
        "title": "Port",
        "type": "text",
        "name": "port",
        "required": false,
        "visible": true,
        "editable": true,
        "description": "Specify the port number to connect."
      }
    ]
  },
  "operations": [
    {
      "operation": "topic_list",
      "title": "kafka topic list",
      "description": "Retrieves all topics that are on the Kafka.",
      "enabled": true,
      "category": "investigation",
      "annotation": "topic_list",
      "output_schema": {},
      "parameters": []
    },
    {
      "operation": "topic_details",
      "title": "kafka topic details",
      "description": "Get details of topic(s) based on the topic names and other input parameters specified from Kafka",
      "enabled": true,
      "category": "investigation",
      "annotation": "topic_details",
      "output_schema": {},
      "parameters": [
        {
          "title": "Topic Names",
          "type": "object",
          "name": "topics",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "tooltip": "sample input: \n[\"topic1\", \"my-topic\"]",
          "description": "Specify the topic names whose details you want to fetch."
        },
        {
          "title": "Poll Timeout in ms",
          "type": "integer",
          "name": "timeout_ms",
          "required": false,
          "visible": true,
          "editable": true,
          "value": 1000,
          "description": "Specify the Poll Timeout in ms"
        },
        {
          "title": "Max Records",
          "type": "integer",
          "name": "max_records",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "description": "Specify the maximum records to fetch."
        },
        {
          "title": "Seek Partition",
          "type": "object",
          "name": "seek_partition",
          "tooltip": "sample input value: \n[\n\t{\n\t\t\"partition\": 1,\n\t\t\"offset\": 1,\n\t}\n]",
          "required": false,
          "visible": true,
          "editable": true,
          "value": "Specify the seek partition"
        }
      ]
    },
    {
